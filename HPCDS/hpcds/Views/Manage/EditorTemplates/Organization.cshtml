@model hpcds.Models.OrganizationViewModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(model => model.OrganizationName, htmlAttributes: new { @class = "control-label col-12 col-md-6" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.OrganizationName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.OrganizationName)
    </div>
</div>
<fieldset disabled>
    <div class="form-group">
        @Html.Label("Organization ID (OID)", htmlAttributes: new { @class = "control-label col-12 col-md-6" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PIN, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LegacyWaPins, htmlAttributes: new { @class = "control-label col-12 col-md-6" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LegacyWaPins, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</fieldset>

<div class="form-group">
    @Html.LabelFor(m => m.DUNSNumber, htmlAttributes: new { @class = "control-label col-12 col-md-6" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.DUNSNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DUNSNumber)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ContactUserId, htmlAttributes: new { @class = "control-label col-12 col-md-6" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.ContactUserId, new { members = Model.Users })
        @Html.ValidationMessageFor(model => model.ContactUserId)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.MailingAddress, htmlAttributes: new { @class = "control-label col-12 col-md-6" })
</div>
@Html.EditorFor(model => model.MailingAddress)
@Html.HiddenFor(model => model.MailingAddress.ID)
@Html.HiddenFor(model => model.MailingAddress.OrganizationID)
<br />
<hr class="col-10">

<div id="physicalAddress">
    <div class="form-group">
        @Html.LabelFor(model => model.PhysicalAddress, htmlAttributes: new { @class = "control-label col-5 col-sm-4 col-md-3" })

        @Html.EditorFor(model => model.IsSameAsMailingAddress, new { htmlAttributes = new { data_toggle = "collapse", data_target = ".notSameAsMailingAddress-panel" } })
        @Html.ValidationMessageFor(model => model.IsSameAsMailingAddress, "", new { @class = "text-danger" })
    </div>
    <div class="notSameAsMailingAddress-panel collapse">
        @Html.EditorFor(model => model.PhysicalAddress)
        @Html.HiddenFor(model => model.PhysicalAddress.ID)
        @Html.HiddenFor(model => model.PhysicalAddress.OrganizationID)
    </div>
</div>
