@model hpcds.Models.ChallengeQandAViewModel
@{
    ViewBag.Title = "Security question";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("VerifyUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Q_ID)
    @Html.HiddenFor(model => model.Question)
    @Html.HiddenFor(model => model.Code)
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group">
        @Html.Label(Model.Question, new { @class = "col-md-12 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
